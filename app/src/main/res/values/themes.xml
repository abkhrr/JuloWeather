<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JuloWeather" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/COLOR_PRIMARY</item>
        <item name="colorPrimaryDark">@color/COLOR_PRIMARY</item>
        <item name="colorAccent">@color/COLOR_PRIMARY_INVERT</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/COLOR_BACKGROUND_PRIMARY</item>
        <item name="android:colorBackground">@color/COLOR_BACKGROUND_PRIMARY</item>
        <item name="android:textColorPrimary">@color/COLOR_TEXT_MAIN_INVERT</item>
        <item name="android:colorEdgeEffect">@color/COLOR_PRIMARY</item>
        <item name="android:colorControlActivated">@color/COLOR_ACCENT_PRIMARY</item>
        <item name="colorControlActivated">@color/COLOR_ACCENT_SECONDARY</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:editTextColor">@color/COLOR_TEXT_NAVIGATION</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.JuloWeather.Splash" parent="Theme.JuloWeather">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/COLOR_TEXT_NAVIGATION</item>
        <item name="android:windowBackground">@color/COLOR_BACKGROUND_PRIMARY</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.JuloWeather.Camera" parent="Theme.JuloWeather">
        <item name="colorAccent">@color/COLOR_ACCENT_PRIMARY</item>
        <item name="actionMenuTextColor">@color/COLOR_TEXT_NAVIGATION</item>
        <item name="android:windowBackground">@color/COLOR_BACKGROUND_PRIMARY</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="Theme.JuloWeather.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JuloWeather.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JuloWeather.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>